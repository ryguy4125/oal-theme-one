{
  "sections": {
      "main": {
        "type": "main-product",
        "blocks": {
          "vendor": {
            "type": "text",
            "settings": {
              "text_style": "uppercase",
              "text": "{{ product.vendor }}"
            }
          },
          "title": {
            "type": "title"
          },
          "subtitle": {
            "type": "text",
            "settings": {
              "text": "{{ product.metafields.descriptors.subtitle.value }}",
              "text_style": "subtitle"
            }
          },
          "price": {
            "type": "price"
          },
          "description": {
            "type": "description"
          }
        },
        "block_order": [
          "vendor",
          "title",
          "subtitle",
          "price",
          "description"
        ]
      },
      "product-recommendations": {
        "type": "product-recommendations"
      }
    },
    "order": [
      "main",
      "product-recommendations"
    ]
}