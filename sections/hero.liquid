{
    "name": "Hero Image",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        } 
    ],
    "presets": [
        {
            "name": "Hero Image",
            "category": "Image"
        }
    ]
}
{% endschema %}